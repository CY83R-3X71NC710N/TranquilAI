#!/bin/bash
# Simple wrapper for the consolidated wallpaper generator

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_SCRIPT="$SCRIPT_DIR/wallpaper_generator.py"

# Check if the Python script exists
if [ ! -f "$PYTHON_SCRIPT" ]; then
    echo "Error: wallpaper_generator.py not found in $SCRIPT_DIR"
    exit 1
fi

# Check if requests library is available
python3 -c "import requests" 2>/dev/null
if [ $? -ne 0 ]; then
    echo "Error: requests library not found."
    echo "Please install it with: pip install requests --user"
    echo "Or run: python3 wallpaper_generator.py --setup"
    exit 1
fi

# Pass all arguments to the Python script
python3 "$PYTHON_SCRIPT" "$@"
